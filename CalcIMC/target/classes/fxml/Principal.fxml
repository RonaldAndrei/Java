<AnchorPane id="AnchorPane" prefHeight="320.0" prefWidth="330.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PrincipalController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="79.0" prefWidth="330.0" style="-fx-background-color: blue;">
