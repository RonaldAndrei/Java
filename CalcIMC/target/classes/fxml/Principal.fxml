               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" layoutY="79.0" prefHeight="100.0" prefWidth="330.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="160.0" style="-fx-background-color: white;">
               <children>
                  <Label text="Peso (KG)">
                     <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtFldPeso" />
               </children>
               <HBox.margin>
                  <Insets left="3.0" right="5.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="160.0" style="-fx-background-color: white;">
               <children>
                  <Label text="Altura (Metros)">
                     <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtFldAltura" />
               </children>
               <HBox.margin>
                  <Insets left="5.0" right="3.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
