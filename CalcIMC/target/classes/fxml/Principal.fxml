                  <Label alignment="CENTER" contentDisplay="CENTER" text="Calculadora IMC" textFill="#949494">
                     <font>
                        <Font name="Segoe UI Semibold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Label fx:id="lblResult" text="RESULTADO">
               <font>
                  <Font name="LCD Bold" size="48.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" layoutY="175.0" prefHeight="145.0" prefWidth="330.0" style="-fx-background-color: white;">
